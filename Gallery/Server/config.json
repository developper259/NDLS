{
  "server": {
    "port": 3000,
    "cors": true,
    "root": "http://localhost:3000"
  },

  "paths": {
    "media": "./storage/media",
    "thumbs": "./storage/thumbs"
  },

  "upload": {
    "maxFileSizeMB": 10240,
    "allowedImages": ["image/jpeg", "image/png", "image/webp"],
    "allowedVideos": ["video/mp4", "video/webm", "video/quicktime"]
  },

  "thumbnails": {
    "image": {
      "width": 400,
      "quality": 80
    },
    "video": {
      "width": 400,
      "time": "00:00:01"
    }
  },

  "hash": {
    "algorithm": "sha256"
  },

  "storage": {
    "unit": "GB"
  }
}
